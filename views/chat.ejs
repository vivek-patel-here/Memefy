<%-layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="meme">
    <h2>Meme Box</h2>
    <% for(let i of chats) { %>
    <div class="card">
      <div class="card-header">
        <img
          class="avatar"
          src="<%= i.postedBy.profile %>"
          alt=""
        />
        <div class="username"><%= i.postedBy.username  %></div>
      </div>
      <div class="card-main">
        <p class="User-msg"><%= i.chat %></p>
        <img src="<%=i.image%>" alt="" class="meme-img">
      </div>
    </div>
    <%}%>
  </div>

  <div class="guide">
    <% if(!currentUser){ %>
    <li class="loginorsignup"><a href="/user/login"><span>login</span> </a>or <a href="/user/signup"><span>signup</span></a> to view and share memes</li>
      <% }else{ %>
    <h2>User Guide</h2>
    <li>You can view others' memes in the right box.</li>
    <li>You can send meme using bottom chat box.</li>
    <li>
      I'm still learning, so this site isn't as polished as WhatsApp. Please
      refresh the page often to see new messages.
    </li>
    <li>Only for NSUT-ians.</li>
    <li>Have Fun.</li>
    <% } %>
  </div>

  <div class="chat">
    <% if(!currentUser){ %>
      <div class="blur"> <span class="green">S</span>ignup Or <span class="green">L</span>ogIn to <br><span class="green">C</span>ontinue<span class="green"> &rarr;</span>
      </div>
        <% }else{%>
        <h4>Create the Laughs!</h4>
        <form action="/chat" method="post" enctype="multipart/form-data">
          <input type="text" placeholder="Chat Here !" name="chat" id="chat" />
          <div>
            <label for="file-upload" class="custom-file-upload">
              !! Upload Meme !!
            </label>
            <input id="file-upload" name="image" type="file" />
          </div>
          <button class="send">
            Send &rarr;
            <div class="layer"></div>
          </button>
          <% } %>
    </form>
  </div>
</body>
